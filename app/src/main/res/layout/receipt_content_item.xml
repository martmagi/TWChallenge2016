<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/good"
              android:id="@+id/receipt_content_item" android:paddingTop="12dp" android:paddingBottom="12dp"
              android:paddingLeft="16dp" android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Some thingie"
            android:textSize="16dp"
            android:layout_weight="1"
            android:id="@+id/receipt_element_company"
            android:fontFamily="sans-serif-light"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 eur"
            android:textSize="16sp"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:id="@+id/receipt_element_price"
            android:fontFamily="sans-serif-condensed"

        />

</LinearLayout>