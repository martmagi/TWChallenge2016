<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/receipt_content_item"
              android:paddingRight="16dp" android:paddingLeft="16dp" android:background="#fff">

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@color/good"
            android:id="@+id/type" android:alpha=".6" android:transitionGroup="false"
            android:layout_gravity="center_vertical">
    </FrameLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Some thingie"
            android:textSize="16dp"
            android:layout_weight="1"
            android:id="@+id/receipt_element_company"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:layout_gravity="center_vertical"/>
        <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="123 eur"
                android:textSize="16sp"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical|end"
                android:id="@+id/receipt_element_price"
                android:fontFamily="sans-serif-condensed"

                android:layout_marginBottom="12dp" android:layout_marginTop="12dp"/>

</LinearLayout>